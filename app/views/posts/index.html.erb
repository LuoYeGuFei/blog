<h2>文章列表</h2>
<table class="table table-hover">
  <tbody>
    <% @posts.each do |p| %>
      <tr>
        <td>默认</td>
        <td><%= link_to p.title, post_path(p.id) %> <%= p.updated_at.to_date %></td>
        <td>阅读 <%= p.view_count%></td>
        <td>评论 0</td>
        <td>
          <%= link_to "编辑", edit_post_path(p) %>
          <%= link_to "删除", post_path(p), method: :delete, 'data-confirm': "确定要删除吗？" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
